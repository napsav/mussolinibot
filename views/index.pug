doctype html
html(lang='it')
  head
    title MussoliniBOT
  body
    h1 MussoliniBOT Pannello per aggiungere comandi
    #container.col
      form(method='POST' action='/')
        label(for='comando') Comando: 
        input#comando(type='text' name='comando' required='')
        label(for='risposta')  Risposta: 
        input#risposta(type='text' name='risposta' required='')
        input(type='submit' value='Submit')
      ul
        each val, key in commands
          li= key + ': ' + val
          a(href=`?remove=${key}`) Cancella
